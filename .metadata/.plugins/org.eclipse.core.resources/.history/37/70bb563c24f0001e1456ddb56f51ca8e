package user;

import java.util.ArrayList;

public class UserService {
//	UserService 클래스 
//	회원정보를 저장할 list를 private 로 선언한다
	//필드 
	private ArrayList list; 
//생성자 
	public UserService(ArrayList list) {
	super();
	this.list = list;
}
//getter 
	public ArrayList getList() {
		return this.list;
	}
	
	
//	메소드 
	//아이디 중복 검사 메소드 
//	파라미터로 들어온 contains 로 중복 확인 반환값 boolean 
	boolean duplicateId(String id) {
		for(int i = 0 ; i< list.size() ;i++) {
			if(list.contains(id)) {
				System.out.println("중복되는 아이디가 있습니다.");
				return false;
			}
		}
		return true;
	}
	//회원가입 메소드
	//아이디 중복 검사를 통해 중복되지 않는다면 , 비밀번호와 이름 나이를 대입해 넣어준다 add 
	//성공하면 boolean true값 반환
	boolean join(String id,String password, String name, int age) {
		if(!duplicateId(id)) {
			return false;
		}
		UserVO user = new UserVO(id, password, name, age);
		list.add(user);
		return true;
		
		
	}
	//로그인 메소드 
	//contain 을 이용해 id 와 pw가 동시에 같으면 로그인 되었습니다 출력
	//실패 성공을 boolean 반환 타입
	
}
